<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Precept Thoughts -->
    <ThoughtDef>
        <defName>AmountOfTransgender_Disliked</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>GenderAcceptance.Mian.ThoughtWorkers.PreceptTransgender</workerClass>
        <validWhileDespawned>false</validWhileDespawned>
        <stages>
            <li>
                <label>Traditional Gender Norms Preferred</label>
                <description>Feels relief in maintaining traditional gender norms.</description>
                <baseMoodEffect>+5</baseMoodEffect>
            </li>
            <li>
                <label>Noticeable Transgender Individual</label>
                <description>Discomfort with a transgender individual, feeling it's untraditional.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>Few Transgender Individuals</label>
                <description>Unsettled by the presence of multiple transgender individuals.</description>
                <baseMoodEffect>-6</baseMoodEffect>
            </li>
            <li>
                <label>Too Many Transgender Individuals</label>
                <description>Distressed by many transgender individuals, feeling overwhelmed.</description>
                <baseMoodEffect>-9</baseMoodEffect>
            </li>
        </stages>
        <nullifyingTraits>
            <li>Cisphobic</li>
        </nullifyingTraits>
        <nullifyingHediffs>
            <li>Transgender</li>
        </nullifyingHediffs>
    </ThoughtDef>

    <ThoughtDef>
        <defName>NegativeViewOnTransgender</defName>
        <thoughtClass>Thought_SituationalSocial</thoughtClass>
        <workerClass>GenderAcceptance.Mian.ThoughtWorkers.IsTransgenderNegative</workerClass>
        <stages>
            <li>
                <label>Transphobia</label>
                <baseOpinionOffset>-20</baseOpinionOffset>
            </li>
        </stages>
        <nullifyingTraits>
            <li>Cisphobic</li>
        </nullifyingTraits>
    </ThoughtDef>

    <ThoughtDef>
        <defName>AmountOfTransgender_Liked</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>GenderAcceptance.Mian.ThoughtWorkers.PreceptTransgender</workerClass>
        <validWhileDespawned>false</validWhileDespawned>
        <stages>
            <li>
                <label>Lacking Transgender Individuals</label>
                <description>Our community isn't diverse until we get transgender individuals.</description>
                <baseMoodEffect>-4</baseMoodEffect>
            </li>
            <li>
                <label>First Transgender Individual</label>
                <description>The presence of a transgender individual among us speaks volume about our diversity.</description>
                <baseMoodEffect>+2</baseMoodEffect>
            </li>
            <li>
                <label>Multiple Transgender Individuals</label>
                <description>Multiple transgender people within the community make us feel safe and diverse.</description>
                <baseMoodEffect>+4</baseMoodEffect>
            </li>
            <li>
                <label>Populated Transgender Community</label>
                <description>Joyful for the abundance of transgender individuals, symbolizing full acceptance.</description>
                <baseMoodEffect>+6</baseMoodEffect>
            </li>
        </stages>
        <nullifyingTraits>
            <li>Transphobic</li>
        </nullifyingTraits>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Internal_Transphobia</defName>
        <thoughtClass>Thought_Situational</thoughtClass>
        <workerClass>GenderAcceptance.Mian.ThoughtWorkers.InternalTransphobia</workerClass>
        <stages>
            <li>
                <label>Internal transphobia</label>
                <description>I feel ashamed for being transgender</description>
                <baseMoodEffect>-10</baseMoodEffect>
            </li>
            <li>
                <label>Mild internal transphobia</label>
                <description>It hurts that our culture is unaccepting of people like me</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PositiveViewOnTransgender</defName>
        <thoughtClass>Thought_SituationalSocial</thoughtClass>
        <workerClass>GenderAcceptance.Mian.ThoughtWorkers.IsTransgenderPositive</workerClass>
        <stages>
            <li>
                <label>Transgender</label>
                <baseOpinionOffset>+20</baseOpinionOffset>
            </li>
        </stages>
        <nullifyingTraits>
            <li>Transphobic</li>
        </nullifyingTraits>
    </ThoughtDef>
</Defs>