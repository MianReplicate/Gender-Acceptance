<Defs>
  <!-- Precept Thoughts -->
  <ThoughtDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>AmountOfTransgender_Disliked</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_PreceptTransgender</workerClass>
    <validWhileDespawned>false</validWhileDespawned>
    <stages>
      <li>
        <label>Traditional Gender Norms Preferred</label>
        <description>Feels relief in maintaining traditional gender norms.</description>
        <baseMoodEffect>+5</baseMoodEffect>
      </li>
      <li>
        <label>Noticeable Transgender Individual</label>
        <description>Discomfort with a transgender individual, feeling it's untraditional.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
      <li>
        <label>Few Transgender Individuals</label>
        <description>Unsettled by the presence of multiple transgender individuals.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>Too many Transgender Individuals</label>
        <description>Distressed by many transgender individuals, feeling overwhelmed.</description>
        <baseMoodEffect>-9</baseMoodEffect>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Cisphobic</li>
    </nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>NegativeViewOnTransgender</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_NegativeViewOnTransgender</workerClass>
    <stages>
      <li>
        <label>Transphobia</label>
        <baseOpinionOffset>-20</baseOpinionOffset>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Cisphobic</li>
    </nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>AmountOfTransgender_Liked</defName>
    <thoughtClass>Thought_Situational</thoughtClass>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_PreceptTransgender</workerClass>
    <validWhileDespawned>false</validWhileDespawned>
    <stages>
      <li>
        <label>Lacking Diversity</label>
        <description>Feels the lack of transgender individuals as a gap in communal diversity</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
      <li>
        <label>First Transgender Individual</label>
        <description>The presence of a transgender individual among us serves as a beacon of progress and love</description>
        <baseMoodEffect>+2</baseMoodEffect>
      </li>
      <li>
        <label>Growing Diversity</label>
        <description>A couple transgender people in our midst enhance our community's vibrancy</description>
        <baseMoodEffect>+4</baseMoodEffect>
      </li>
      <li>
        <label>Diverse Harmony</label>
        <description>Joyful for the abundance of transgender individuals, symbolizing full acceptance</description>
        <baseMoodEffect>+6</baseMoodEffect>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Transphobic</li>
    </nullifyingTraits>
  </ThoughtDef>

  <ThoughtDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>PositiveViewOnTransgender</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_PositiveViewOnTransgender</workerClass>
    <stages>
      <li>
        <label>Transgender</label>
        <baseOpinionOffset>+20</baseOpinionOffset>
      </li>
    </stages>
    <nullifyingTraits>
      <li>Transphobic</li>
    </nullifyingTraits>
  </ThoughtDef>
  
  <!--Phobias-->
  <ThoughtDef>
    <defName>Cisphobia</defName>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_Cisphobia</workerClass>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Cisphobia</label>
        <baseOpinionOffset>-25</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Transphobia</defName>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_Transphobia</workerClass>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Transphobia</label>
        <baseOpinionOffset>-25</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <!--Misc-->
  <ThoughtDef>
    <defName>Chaser_Need_Thought</defName>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_Chaser_Need</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Intimate with a trans person</label>
        <description>Been around a trans person recently, feeling great!</description>
        <baseMoodEffect>+25</baseMoodEffect>
      </li>
      <li>
        <label>Need a trans person</label>
        <description>I haven't felt the touch of a trans person in a while..</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
      <li>
        <label>Longing for a trans person</label>
        <description>I'm getting anxious and worried that I will never touch a trans person ever again.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
      <li>
        <label>Aching for a trans person</label>
        <description>I am foaming at the mouth in desperate need for a transgender.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>Similar</defName>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_Similarity</workerClass>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Both relate to being transgender</label>
        <baseOpinionOffset>+15</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>TransgenderPersonJoined</defName>
    <durationDays>5</durationDays>
    <stages>
      <li>
        <label>Transgender person joined </label>
        <description>It feels good knowing I'll have company that can relate to being transgender.</description>
        <baseMoodEffect>+25</baseMoodEffect>
      </li>
      <li>
        <label>Transgender person joined</label>
        <description>Disgusting! Why did we let them join?</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Accidental_Misgender</defName>
    <durationDays>2</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>misgendered someone</label>
        <description>I accidentally misgendered someone. I feel terrible.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>Misgendered</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>20</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <socialTargetDevelopmentalStageFilter>Baby, Child, Adult</socialTargetDevelopmentalStageFilter>
    <stages>
      <li>
        <label>misgendered</label>
        <baseOpinionOffset>-15</baseOpinionOffset>
      </li>
    </stages>
    <thoughtToMake>MisgenderedMood</thoughtToMake>
  </ThoughtDef>

  <ThoughtDef>
    <defName>MisgenderedMood</defName>
    <durationDays>2</durationDays>
    <stackLimit>10</stackLimit>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>misgendered</label>
        <description>I was misgendered by someone!</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>CisgenderPersonJoined</defName>
    <durationDays>5</durationDays>
    <stages>
      <li>
        <label>Cisgender person joined</label>
        <description>Disgusting! Why did we let them join?</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef MayRequire="Ludeon.RimWorld.Ideology">
    <defName>Internal_Transphobia</defName>
    <workerClass>GenderAcceptance.Mian.ThoughtWorker_InternalTransphobia</workerClass>
    <stages>
      <li>
        <label>Internal Transphobia</label>
        <description>I feel ashamed for being transgender</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
      <li>
        <label>Mild Internal Transphobia</label>
        <description>It hurts that our culture is unaccepting of people like me</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
